#ifndef OSGEARTHSYMBOLOGY_SYMBOLIZER_H
#define OSGEARTHSYMBOLOGY_SYMBOLIZER_H 1

#include <osgEarthSymbology/Common>
#include <osgEarthSymbology/Style>
#include <osgEarth/Revisioning>
#include <osg/Group>

namespace osgEarth { namespace Symbology
{
    /**
     * A shared context that is available to each symbolizer when it compiles
     * data. It may contain information about a terrain, srs, or other global
     * information.
     */
    // NOTE: header-only; no export macro
    class SymbolizerContext : public osg::Referenced
    {
    };

    // NOTE: header-only; to export macro
    class SymbolizerInput : public virtual osgEarth::Revisioned<osg::Referenced>
    {
    };

    /**
     * Interface for an object that compiles attributed geometry into
     * OSG scene graph elements based on a Style and a SymbologyContext.
     */
    class OSGEARTHSYMBOLOGY_EXPORT Symbolizer : public osg::Referenced
    {
    public:
        /** 
         * The State lets you create a shared symbolizer, but track a persistent state 
         * across more than one SymbolicNode.
         *
         * It also provides the Symbolizer implemetation access to information of whether
         * it is out-of-date with respect to the style and input data.
         */
        class OSGEARTHSYMBOLOGY_EXPORT State : public osg::Referenced
        {
        public:
            State();
            bool outOfSyncWith( const Style* style ) const;
            bool outOfSyncWith( const SymbolizerInput* dataSet ) const;
        protected:
            int _styleRevision;
            int _dataSetRevision;
            friend class SymbolicNode;
        };

    public:
        /**
         * Creates or updates a subgraph representing the symbolized data.
         * The Symbolizer can attach the subgraph to the attachPoint.
         */
        virtual bool update(
            const SymbolizerInput* dataInput,
            const Style*           style,
            osg::Group*            attachPoint,
            SymbolizerContext*     context,
            Symbolizer::State*     state ) = 0;

        /** 
         * Implementation can override this method to provide a custom State object.
         * We recommend that you keep non-transient Symbolizer state in a State object so
         * the Symbolizer instance can be shared across multiple SymbolicNodes.
         */
        virtual State* createState() const {
            return new State();
        }

    protected:
        Symbolizer();
    };

} } // namespace osgEarth::Symbology

#endif // OSGEARTHSYMBOLOGY_SYMBOLIZER_H
