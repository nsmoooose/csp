ost_cv_dynloader="@ost_cv_dynloader@"      
modflags="@MODULE_FLAGS@"
ccflags="@THREAD_FLAGS@ @CXXFLAGS@"
cclink="@SOCKET_LIBS@ @GETOPT_LIBS@ @THREAD_LIBS@"
ccload="@DYN_LOADER@"
ccstd="@XML_LIBS@ @ZSTREAM_LIBS@"
prefix="@prefix@"
exec_prefix="@exec_prefix@"
libdir="-L@libdir@"

includes="@includedir@/cc++2"
includedir="-I@includedir@/cc++2"

usage()
{
	cat <<EOF
Usage: ccgnu2-config [OPTIONS]
Options:
	[--prefix]
	[--version]
	[--flags]
	[--libs]
	[--gnulibs]
	[--iolibs]
	[--extlibs]
	[--stdlibs]
	[--includes]
	[--module]
EOF
	exit $1
}

if test $# -eq 0 ; then
	usage 1 1>&2
fi

while test $# -gt 0 ; do
	case "$1" in
	--prefix)
		echo @prefix@
		;;
	--version)
		echo @VERSION@
		;;
	--flags)
		echo $includedir $ccflags
		;;
	--libs | --gnulibs)
		echo $libdir -lccgnu2 $ccload $cclink
		;;
	--iolibs)
		echo $libdir -lccgnu2 $ccload $cclink
		;;
	--stdlibs)
		echo $libdir -lccext2 -lccgnu2 $ccstd $ccload $cclink
		;;
	--extlibs)
		echo -lccext2 $ccstd
		;;
	--includes)
		echo $includes
		;;
	--dyn | --dso)
		echo $ost_cv_dynloader
		;;
	--modflags | --module)
		echo $modflags
		;;
	*)
		usage 1 1>&2
		;;
	esac
	shift
done

