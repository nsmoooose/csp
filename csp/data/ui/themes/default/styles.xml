<?xml version="1.0"?>
<StyleDocument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../window_document.xsd">
  <NamedStyles>
    <!-- Each of the following styles is default for each widget. -->
    <Style Name="Button">
      <BackgroundColor>ffffffaa</BackgroundColor>
      <BorderWidth>1</BorderWidth>
      <BorderColor>000000ff</BorderColor>
    </Style>

    <Style Name="Button:disabled">
      <BackgroundColor>aaaaaaaa</BackgroundColor>
      <BorderWidth>1</BorderWidth>
      <BorderColor>00000044</BorderColor>
    </Style>

    <Style Name="CheckBox">
      <FontFamily>prima_sans_bt.ttf</FontFamily>
      <FontSize>20</FontSize>
      <Color>000000ff</Color>
      <BorderWidth>0</BorderWidth>
      <BorderColor>000000ff</BorderColor>
    </Style>

    <Style Name="Label">
      <FontFamily>prima_sans_bt.ttf</FontFamily>
      <FontSize>20</FontSize>
      <Color>000000ff</Color>
      <BackgroundColor>00000000</BackgroundColor>
    </Style>

    <Style Name="Label:disabled">
      <FontFamily>prima_sans_bt.ttf</FontFamily>
      <FontSize>20</FontSize>
      <Color>333333ff</Color>
      <BackgroundColor>00000000</BackgroundColor>
    </Style>

    <Style Name="ListBox">
      <BorderWidth>1</BorderWidth>
      <BorderColor>00000099</BorderColor>
    </Style>

    <Style Name="ListBoxItem">
      <BackgroundColor>ffffff99</BackgroundColor>
      <BorderWidth>0</BorderWidth>
    </Style>

    <Style Name="ListBoxItem:selected">
      <BackgroundColor>ffaaaa55</BackgroundColor>
      <BackgroundColorBottomLeft>55000055</BackgroundColorBottomLeft>
      <BackgroundColorBottomRight>ff000055</BackgroundColorBottomRight>
      <BorderWidth>0</BorderWidth>
    </Style>

    <Style Name="Tab">
    </Style>

    <Style Name="TabPage">
      <FontFamily>prima_sans_bt.ttf</FontFamily>
      <FontSize>20</FontSize>
      <Color>000000ff</Color>
      <BackgroundColor>00000000</BackgroundColor>
    </Style>

    <Style Name="Window">
      <BackgroundColor>ffffffbb</BackgroundColor>
      <BorderWidth>1</BorderWidth>
      <BorderColor>000000ff</BorderColor>
    </Style>

    <!-- The following styles is specialized styles that can be applied to any
         control. -->

    <Style Name="desktop">
      <BackgroundImage>images/logo/csp.png</BackgroundImage>
      <BorderWidth>0</BorderWidth>
    </Style>
    
    <Style Name="stripe">
      <BackgroundColor>ff0000ff</BackgroundColor>
      <BackgroundColorTopRight>ff000000</BackgroundColorTopRight>
      <BackgroundColorBottomRight>ff000000</BackgroundColorBottomRight>
      <BorderTopWidth>1</BorderTopWidth>
      <BorderTopColor>000000ff</BorderTopColor>
    </Style>

    <Style Name="window_default">
      <BorderLeftWidth>10</BorderLeftWidth>
      <VerticalAlign>middle</VerticalAlign>
      <HorizontalAlign>center</HorizontalAlign>
    </Style>

  </NamedStyles>
</StyleDocument>
