#ifndef OSGEARTHUTIL_WINDOWMANAGER_H
#define OSGEARTHUTIL_WINDOWMANAGER_H 1

#include <osgEarthUtil/Common>
#include <osgEarthUtil/WidgetMessageBox>
#include <osgEarthSymbology/GeometrySymbol>
#include <osgWidget/WindowManager>
#include <osgViewer/Viewer>

namespace osgEarthUtil
{

    class OSGEARTHUTIL_EXPORT WindowManager : public osg::Referenced
    {
    public:
        WindowManager(osgViewer::Viewer&);
        osgWidget::WindowManager* getWindowManager() { return _windowManager.get(); }

        WidgetMessageBox* createWidgetMessageBox(const std::string& title, const std::string& content, const osgEarth::Symbology::TextSymbol* symbol);

    protected:
        osg::ref_ptr<osgWidget::WindowManager> _windowManager;
        unsigned int _widgetNumInstance;
    };

}

#endif
