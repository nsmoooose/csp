#ifndef OSGEARTHUTIL_WIDGET_NODE_H
#define OSGEARTHUTIL_WIDGET_NODE_H 1

#include <osgEarthUtil/Common>
#include <osgEarthUtil/Widget>
#include <osgEarthUtil/WindowManager>
#include <osg/Node>
#include <osg/NodeVisitor>

namespace osgEarthUtil
{

    class OSGEARTHUTIL_EXPORT WidgetNode : public osg::Node
    {

    public:
        WidgetNode();

        void setWidget(Widget* widget);

        const Widget* getWidget() const;
        Widget* getWidget();

        void accept(osg::NodeVisitor& nv);

    protected:
        osg::ref_ptr<Widget> _widget;
        osg::Vec2 _positionOnScreen;
        bool _hide;

    };

}

#endif
