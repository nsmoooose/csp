#ifndef OSGEARTH_DRIVER_OPTIONS_H
#define OSGEARTH_DRIVER_OPTIONS_H 1

#include <osgEarth/Common>
#include <osgEarth/Config>

namespace osgEarth
{
    class OSGEARTH_EXPORT DriverOptions : public PluginOptions // no export; header only
    {
    public: // properties
        std::string& name() { return _name; }
        const std::string& name() const { return _name; }

        const std::string& driver() const { return _driver; }

    public:        
        DriverOptions( const Config& conf );
        
        virtual Config toConfig() const;

    protected:
        DriverOptions() { }
        DriverOptions( const PluginOptions* options );

        void fromConfig( const Config& conf );

        std::string& driver() { return _driver; }
        std::string _driver, _name;
    };
}

#endif // OSGEARTH_DRIVER_OPTIONS_H


