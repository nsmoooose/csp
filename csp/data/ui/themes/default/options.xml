<?xml version="1.0"?>
<WindowDocument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation='../../window_document.xsd'>
  <Window SizeWidth="140" SizeHeight="120" Caption="Options" >
    <Control>
      <MultiControlContainer>
        <Controls>

          <!-- The window contains a tab control with several pages and two buttons. -->
          <Tab LocationY="7" SizeWidth="132" SizeHeight="92">
            <Pages>
              <!-- Display page of the tab control. Here you can choose several 
                resolutions and fullscreen mode. -->
              <Page Text="Display">
                <Control>
                  <MultiControlContainer>
                    <Controls>
                      <Label Text="Resolution:" LocationX="-60" LocationY="30" />
                      <ListBox Id="resolution" LocationX="10" LocationY="5" SizeWidth="50" SizeHeight="55">
                        <Items>
                          <Item Text="640x480" />
                          <Item Text="800x600" />
                          <Item Text="1024x768" />
                          <Item Text="1280x1024" />
                        </Items>
                      </ListBox>
                      <CheckBox Id="fullscreen" LocationX="-60" LocationY="-30" Text="Fullscreen" />
                    </Controls>
                  </MultiControlContainer>
                </Control>
              </Page>

              <!-- Sound options page with volume settings. -->
              <Page Text="Sound" >
              </Page>
            </Pages>
          </Tab>

          <!-- Buttons for ok and cancel actions. -->
          <Button Id="ok" Text="OK" LocationX="27" LocationY="-47" SizeWidth="25" SizeHeight="10" />
          <Button Id="cancel" Text="Cancel" LocationX="53" LocationY="-47" SizeWidth="25" SizeHeight="10" />
        </Controls>
      </MultiControlContainer>
    </Control>
  </Window>
</WindowDocument>
