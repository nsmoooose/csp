<?xml version="1.0"?>
<WindowDocument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation='../../window_document.xsd'>
  <Includes>
    <!-- This include will set the default behaviour on all controls. -->
    <StyleInclude>styles.xml</StyleInclude>
    <StringTableInclude>global.xml</StringTableInclude>
  </Includes>
  <Window CssClass="mainmenu" SizeWidth="210" SizeHeight="3500" LocationZ="1" >
	<Style>
		<VerticalAlign>none</VerticalAlign>
		<HorizontalAlign>none</HorizontalAlign>
	</Style>
    <Control>
      <MultiControlContainer>
        <Controls>
          <Label LocationX="5" LocationY="5" LocationZ="2" SizeWidth="200" SizeHeight="364">
          	<Style>
          		<BackgroundColor>ffffffff</BackgroundColor>
          		<BackgroundImage>images/menu_header.png</BackgroundImage>
          	</Style>
          </Label>
          <Button Id="instantAction" Text="${instant_action}" LocationX="30" LocationY="30" LocationZ="4" SizeWidth="150" SizeHeight="40" />
          <Button Id="tutorials" Enabled="false" Text="${tutorials}" LocationX="30" LocationY="75" LocationZ="4" SizeWidth="150" SizeHeight="40" />
          <Button Id="singleplayer" Enabled="false" Text="${singleplayer}" LocationX="30" LocationY="120" LocationZ="4" SizeWidth="150" SizeHeight="40" />
          <Button Id="multiplayer" Enabled="false" Text="${multiplayer}" LocationX="30" LocationY="165" LocationZ="4" SizeWidth="150" SizeHeight="40" />
          <Button Id="credits" Enabled="false" Text="${credits}" LocationX="30" LocationY="210" LocationZ="4" SizeWidth="150" SizeHeight="40" />
          <Label LocationX="30" LocationY="340" Text="version 0.6">
            <Style>
              <FontSize>12</FontSize>
            </Style>
          </Label>
        </Controls>
      </MultiControlContainer>
    </Control>
  </Window>
</WindowDocument>
